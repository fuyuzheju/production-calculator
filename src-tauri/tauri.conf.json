{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Production Calculator",
  "version": "0.1.0",
  "identifier": "com.caihuijingchun.tools",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Production Calculator",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
        {
            "ext": ["prod"],
            "name": "Production Document",
            "description": "Open with production calculator",
            "role": "Editor"
        }
    ]
  }
}
